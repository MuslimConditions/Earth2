<!DOCTYPE html>
<html>
	<head>
	  <%= include_gon %>
	  
	  <title>Earth2</title>
	  <%= stylesheet_link_tag    "application", media: "all" %>
		<script type="text/javascript" src="https://www.google.com/jsapi"> </script>
		
		<script type="text/javascript">
		    google.load("earth", "1", {"other_params":"sensor=true_or_false"});
			google.load('search', '1');
			google.load("elements", "1", {packages : ["newsshow"]});
		</script>

	  <%= javascript_include_tag "application" %>

	  <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css" />
	  <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>		
	   
	</head>
		<body>
			<div id="branding">earth2</div>
			<br/>
			<div id="sample-ui"></div>

			<!-- <div id="content">

					<div id="map3d"></div>

							<div id="outer">

									<div id="newsfeed">
											<button class="toggleBtn">x</button>
											<div class="article"></div>
									</div>

							</div>

			</div> -->

					<div id="lower">
						<marquee id="ticker" behavior="scroll" direction="left" onmouseover="this.stop();" onmouseout="this.start();"></marquee>
					</div>

			</div>



			<%= if current_user
					"Logged In"
				end  %>
			<div class = "li_su_button">
				<%= link_to "Sign Up", new_user_path %>
				<%= link_to "Log In", new_session_path %>
			<div>
			<button id="create_user">Create New User</button>

			<div id="sign_up_form"> 
				<%= form_for users_path do |f| %>
					<div class="field">
						<%= f.label :name %>
						<%= f.text_field :name %>
					</div>
					<div class="field">
						<%= f.label :email %>
						<%= f.text_field :email %>
					</div>
					<div class="field">
						<%= f.label :password %>
						<%= f.text_field :password %>
					</div>
					<div class="field">
						<%= f.label :password_confirmation %>
						<%= f.text_field :password_confirmation %>
					</div>
					<div class="actions">
						<%= f.submit "Sign up!" %>
					</div>
				<% end %>

			</div>

		<%= yield %>

		</body>
</html>

